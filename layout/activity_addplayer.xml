<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khodkov.michael.Fundraising.AddPlayerList">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/labelFirst"
        android:text="">
    </TextView>

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/labelFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelFIO"
        android:text="@string/textFIO">
    </TextView>

    <EditText
        android:id="@+id/editFIO"
        android:inputType="textCapSentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelFIO"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/hintFIO">
    </EditText>

    <TextView
        android:layout_width="10dp"
        android:layout_height="9dp"
        android:id="@+id/labelSecond"
        android:layout_below="@+id/editFIO"
        android:text="">
    </TextView>

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelDeposit"
        android:layout_below="@+id/labelSecond"
        android:text="@string/textDeposit">
    </TextView>

    <TextView
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelMinus"
        android:layout_below="@+id/labelSecond"
        android:text="@string/textMinus">
    </TextView>

    <EditText
        android:id="@+id/editDeposit"
        android:inputType="numberDecimal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelDeposit"
        android:background="@android:drawable/editbox_background"
        android:text="@string/_0">
    </EditText>

    <CheckBox
        android:id="@+id/checkMinus"
        android:layout_below="@+id/labelDeposit"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <Button
        android:layout_below="@+id/editFIO"
        android:layout_alignParentRight="true"
        android:text="@string/textSave"
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="60dp">
    </Button>

</RelativeLayout>
